block content
  head
    title Crear/Modificar Valores de Referencia
    link(rel="icon", href="/public/img/icon.png", type="image/png")
  h1 Crear/Modificar Valores de Referencia

  form(action=`/buscar-valores/crear-modificar-valores-referencia/${valorReferenciaExistente.id_ValorReferencia}`, method="POST")
    label(for="Edad_Minima") Edad Mínima:
    input(type="number" name="Edad_Minima" value=valorReferenciaExistente.Edad_Minima required)
    label(for="Edad_Maxima") Edad Máxima:
    input(type="number" name="Edad_Maxima" value=valorReferenciaExistente.Edad_Maxima required)
    label(for="Sexo") Sexo:
    select(name="Sexo" required)
      option(value="M" selected=valorReferenciaExistente.Sexo === 'M') Masculino
      option(value="F" selected=valorReferenciaExistente.Sexo === 'F') Femenino
    label(for="Valor_Referencia_Minimo") Valor Mínimo:
    input(type="number" step="0.01" name="Valor_Referencia_Minimo" value=valorReferenciaExistente.Valor_Referencia_Minimo required)
    label(for="Valor_Referencia_Maximo") Valor Máximo:
    input(type="number" step="0.01" name="Valor_Referencia_Maximo" value=valorReferenciaExistente.Valor_Referencia_Maximo required)
    label(for="estado") Estado:
    select(name="estado" required)
      option(value="1" selected=valorReferenciaExistente.estado) Activo
      option(value="0" selected=!valorReferenciaExistente.estado) Inactivo
    button(type="submit") Guardar Valores de Referencia
