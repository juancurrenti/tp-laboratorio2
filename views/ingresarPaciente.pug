doctype html
html
  head
    title Ingresar Datos del Paciente
    link(rel="stylesheet", href="/public/css/style.css")
  body
    h2 Ingresar Datos del Paciente
    form(action="/guardar-paciente" method="post")
      label(for="nombre") Nombre:
      input(type="text" id="nombre" name="nombre", value=`${paciente ? paciente.nombre : ''}`, required)
      br

      label(for="apellido") Apellido:
      input(type="text" id="apellido" name="apellido", value=`${paciente ? paciente.apellido : ''}`, required)
      br

      label(for="dni") DNI:
      input(type="text" id="dni" name="dni", value=`${paciente ? paciente.dni : ''}`, required)
      br

      label(for="fecha_nacimiento") Fecha de Nacimiento:
      input(type="date" id="fecha_nacimiento" name="fecha_nacimiento", value=`${paciente && paciente.fecha_nacimiento instanceof Date ? paciente.fecha_nacimiento.toISOString().substring(0, 10) : ''}`, required)
      br

      label(for="genero") Género:
      select(id="genero" name="genero", required)
        option(value="Masculino", selected=`${paciente && paciente.genero === 'Masculino'}`) Masculino
        option(value="Femenino", selected=`${paciente && paciente.genero === 'Femenino'}`) Femenino
      br

      label(for="embarazo") ¿Embarazada?
      div
        input(type="radio" id="embarazo-si" name="embarazo" value="Si", required, checked=`${paciente && paciente.embarazo === 'Si'}`)
        label(for="embarazo-si") Sí
        input(type="radio" id="embarazo-no" name="embarazo" value="No", required, checked=`${paciente && paciente.embarazo === 'No'}`)
        label(for="embarazo-no") No
      br

      label(for="direccion") Dirección:
      input(type="text" id="direccion" name="direccion", value=`${paciente ? paciente.direccion : ''}`)
      br

      label(for="telefono") Teléfono:
      input(type="text" id="telefono" name="telefono", value=`${paciente ? paciente.telefono : ''}`)
      br

      label(for="email") Correo Electrónico:
      input(type="email" id="email" name="email", value=`${paciente ? paciente.email : ''}`)
      br

      label(for="diagnostico") Diagnóstico (presuntivo o confirmado):
      input(type="text" id="diagnostico" name="diagnostico", value=`${paciente ? paciente.diagnostico : ''}`)
      br

      input(type="submit" value="Guardar Datos")
